{
  "name": "prysmi-website",
  "version": "1.0.0",
  "description": "PRYSMI Agency website with Tailwind CSS build process",
  "main": "index.html",
  "scripts": {
    "clean": "rimraf dist",
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/style.css --minify",
    "build:js": "rollup -c",
    "copy:assets": "copyfiles -u 1 \"assets/**/*\" dist/assets && copyfiles index.html dist && copyfiles -f public/* dist && copyfiles -R functions dist",
    "build": "npm-run-all clean -p build:css build:js -s copy:assets",
    "watch:css": "tailwindcss -i ./src/input.css -o ./dist/style.css --watch",
    "dev": "npm-run-all -p watch:css start",
    "start": "live-server dist"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "autoprefixer": "^10.4.21",
    "copyfiles": "^2.4.1",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "rollup": "^2.79.2",
    "rollup-plugin-terser": "^7.0.2",
    "tailwindcss": "^3.4.17",
    "three": "^0.179.1"
  },
  "keywords": [
    "tailwind",
    "css",
    "b2b",
    "marketing",
    "website"
  ],
  "author": "PRYSMI Agency",
  "license": "ISC"
}
